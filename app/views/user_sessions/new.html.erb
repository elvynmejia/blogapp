<div class="container">
	<h1>Login</h1>
	
	<%= form_tag user_sessions_path, method: :post do %>
		<div class="field">
			<%=	label_tag :email %>
			<%=	text_field_tag :email %>
		</div>

		<div class="field">
			<%=	label_tag :password %>
			<%=	password_field_tag :password %>
		</div>

		<div class="field">
			<%=	submit_tag "Login" %>
		</div>

	<% end %>

	<%= link_to "Back", posts_path %>
</div>