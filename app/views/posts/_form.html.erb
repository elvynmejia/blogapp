<%= form_for(@post, html: { multipart: true}) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title, "Post title"%><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body, "Post body"%><br>
    <%= f.text_area :body %>
  </div>
  <!---tags interface -->
  <div class="field">
    <%= f.label :tag_list %><br>
    <%= f.text_field :tag_list %>
  </div>

  <!---paperclip image uploading -->
  <div class="field">
    <% if @post.image.exists? %>
      <%= image_tag @post.image.url %><br>
    <% end %>
    <%= f.label :image, "Upload an image" %><br>
    <%= f.file_field :image %>
  </div>

  <div class="actions">
    <%= f.submit "Create post", class: "btn btn-primary" %>
  </div>
<% end %>
